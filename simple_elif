#1. IF Statement:

my_var=50
    #50 < 100:
if my_var<100:
    print(my_var,'is less then 100')
print ("We are out of the if statement")

#The if statement is used for conditional execution:

#if_stmt ::=  "if" expression ":" suite

#(or)

my_var=50

if my_var<100:
    print ("Yes")
    print (my_var,"is less then 100")
print ("We are out of the if statement")
